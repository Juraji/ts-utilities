{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ts-utilities": {
            "projectType": "library",
            "root": "projects/ts-utilities",
            "sourceRoot": "projects/ts-utilities/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-ng-packagr:build",
                    "options": {
                        "tsConfig": "projects/ts-utilities/tsconfig.lib.json",
                        "project": "projects/ts-utilities/ng-package.json"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ts-utilities/src/test.ts",
                        "tsConfig": "projects/ts-utilities/tsconfig.spec.json",
                        "karmaConfig": "projects/ts-utilities/karma.conf.js"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/ts-utilities/tsconfig.lib.json",
                            "projects/ts-utilities/tsconfig.spec.json"
                        ],
                        "exclude": [
                            "**/node_modules/**"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "ts-utilities"
}
